{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "64bit",
            "command": "g++",
            "args": [
                "-std=c++23",
                "-I${workspaceFolder}\\src",
                "-I${workspaceFolder}\\dependencies\\include",
                "-L${workspaceFolder}\\dependencies\\lib",
                "${workspaceFolder}\\dependencies\\src\\*.c",
                "${workspaceFolder}\\src\\*.cpp",
                "${workspaceFolder}\\main.cpp",
                "-o",
                "${workspaceFolder}\\out\\64bit\\program.exe",
                "-lglfw3",
                "-lopengl32",
                "-lgdi32 "
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
